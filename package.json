{
  "name": "blackhare",
  "version": "0.3.1",
  "main": "index.js",
  "author": "Raul F. de Melo <melo.raulf@gmail.com> (https://rauldemelo.com.br)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/raulfdm/blackhare-boilerplate"
  },
  "bin": {
    "blackhare": "./dist/index.js"
  },
  "scripts": {
    "test": "yarn tslint src/**/*",
    "pub": "yarn copyBoilerplate && npm publish",
    "copyBoilerplate": "node js/tasks/copy-boilerplate.js",
    "compile": "tsc && yarn copyBoilerplate",
    "start": "tsc -w"
  },
  "dependencies": {
    "@types/commander": "^2.9.1",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "fs-extra": "^3.0.1",
    "inquirer": "^3.1.0",
    "js-beautify": "^1.6.14",
    "ora": "^1.3.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/fs-extra": "^4.0.0",
    "@types/inquirer": "^0.0.35",
    "@types/jest": "^20.0.5",
    "@types/js-beautify": "^0.0.30",
    "@types/node": "^8.0.1",
    "@types/ora": "^1.3.0",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "typescript": "^2.3.4",
    "typescript-eslint-parser": "^4.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
